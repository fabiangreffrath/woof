{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "dependencies": [
    "libebur128",
    {
      "name": "libsndfile",
      "default-features": false,
      "features": [
        "external-libs"
      ]
    },
    "minimp3",
    "miniz",
    {
      "name": "openal-soft",
      "features": [
        {
          "name": "pipewire",
          "platform": "linux"
        },
        {
          "name": "pulseaudio",
          "platform": "linux"
        }
      ]
    },
    {
      "name": "sdl3",
      "features": [
        "vulkan"
      ]
    },
    {
      "name": "yyjson",
      "default-features": false,
      "features": [
        "non-standard",
        "reader"
      ]
    }
  ],
  "features": {
    "discord-rpc": {
      "description": "Build with Discord RPC support",
      "dependencies": [
        "discord-rpc"
      ]
    },
    "fluidsynth": {
      "description": "Build with FluidSynth support",
      "dependencies": [
        {
          "name": "fluidsynth",
          "default-features": false,
          "features": [
            "sndfile"
          ]
        }
      ]
    },
    "libxmp": {
      "description": "Build with libxmp support",
      "dependencies": [
        {
          "name": "libxmp",
          "default-features": false
        }
      ]
    }
  }
}
